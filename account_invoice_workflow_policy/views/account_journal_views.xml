<openerp>
    <data>
        <record id="account_journal_view_form" model="ir.ui.view">
            <field name="name">Account Journal Policy Form</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Policy" attrs="{'invisible': [('type', 'not in', ['sale', 'sale_refund', 'purchase', 'purchase_refund'])]}">
                        <group name="grp_policy_order" string="Account Invoice Workflow Button Policy" colspan="4" col="2">
                            <field name="invoice_open_group_ids" widget="many2many_tags"/>
                            <field name="invoice_refund_group_ids" widget="many2many_tags"/>
                            <field name="invoice_cancel_group_ids" widget="many2many_tags"/>
                            <field name="invoice_restart_group_ids" widget="many2many_tags"/>
                            <field name="invoice_reopen_group_ids" widget="many2many_tags"/>
                            <field name="invoice_send_email_group_ids" widget="many2many_tags"/>
                            <field name="invoice_proforma_group_ids" widget="many2many_tags"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
