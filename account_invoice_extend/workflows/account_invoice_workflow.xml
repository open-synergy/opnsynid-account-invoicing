<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>        
        <record id="act_confirm" model="workflow.activity">
            <field name="wkf_id" ref="account.wkf"/>
            <field name="name">confirm</field>
            <field name="action">write({'state':'confirm'})</field>
            <field name="kind">function</field>
        </record>

        <record id="account.t4" model="workflow.transition">
            <field name="act_from" ref="account.act_draft"/>
            <field name="act_to" ref="act_confirm"/>
            <field name="signal">button_confirm</field>
        </record>

        <record id="account.draft_to_pro2" model="workflow.transition">
            <field name="act_from" ref="account.act_draft"/>
            <field name="act_to" ref="act_confirm"/>
            <field name="signal">button_confirm</field>
        </record>

        <record id="confirm_2_open" model="workflow.transition">
            <field name="act_from" ref="act_confirm"/>
            <field name="act_to" ref="account.act_open"/>
            <field name="signal">invoice_open</field>
        </record>

        <record id="confirm_2_proforma" model="workflow.transition">
            <field name="act_from" ref="act_confirm"/>
            <field name="act_to" ref="account.act_proforma2"/>
            <field name="signal">invoice_proforma2</field>
        </record>
    </data>
</openerp>
