<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record
        id="account_invoice_supplier_state_change_constrains_view_form"
        model="ir.ui.view"
    >
        <field name="name">Account Invoice Supplier State Change Constrains Form</field>
        <field name="model">account.invoice</field>
        <field name="priority" eval="150" />
        <field name="inherit_id" ref="account.invoice_supplier_form" />
        <field name="arch" type="xml">
            <data>
                <xpath expr="//notebook" position="inside">
                    <page name="page_status_check" string="Check Status">
                        <group name="grp_status_check_1">
                            <field name="status_check_template_id" />
                            <field name="state_change_constrain_template_id" />
                        </group>
                        <field name="status_check_ids" nolabel="1" force_save="1" />
                    </page>
                </xpath>
            </data>
        </field>
    </record>

    <record id="account_invoice_state_change_constrains_view_form" model="ir.ui.view">
        <field name="name">Account Invoice State Change Constrains Form</field>
        <field name="model">account.invoice</field>
        <field name="priority" eval="150" />
        <field name="inherit_id" ref="account.invoice_form" />
        <field name="arch" type="xml">
            <data>
                <xpath expr="//notebook" position="inside">
                    <page name="page_status_check" string="Check Status">
                        <group name="grp_status_check_1">
                            <field name="status_check_template_id" />
                            <field name="state_change_constrain_template_id" />
                        </group>
                        <field name="status_check_ids" nolabel="1" force_save="1" />
                    </page>
                </xpath>
            </data>
        </field>
    </record>

</odoo>
