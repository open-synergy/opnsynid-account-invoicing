<odoo>
<data noupdate="1">
<!-- Cust. Invoice -->
<record id="cust_inv_approval_template" model="approval.template">
    <field name="name">Standard Customer Invoice</field>
    <field name="model_id" ref="account.model_account_invoice" />
    <field name="sequence" eval="100" />
    <field name="computation_method">use_python</field>
    <field name="python_code">rec.type == "out_invoice"</field>
    <field name="validate_sequence" eval="1" />
</record>
<record id="cust_inv_approval_template_detail" model="approval.template_detail">
    <field name="template_id" ref="cust_inv_approval_template" />
    <field name="approver_selection_method">use_group</field>
    <field name="approver_group_ids" eval="[(6,0,[ref('base.group_user')])]" />
</record>

