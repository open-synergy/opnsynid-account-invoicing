<odoo>
    <record id="account_invoice_view_form" model="ir.ui.view">
        <field name="name">Account Invoice Form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form" />
        <field name="priority" eval="50" />
        <field name="arch" type="xml">
            <xpath expr="//header/field[@name='state']" position="attributes">
                <attribute name="statusbar_visible">draft,confirm,open,paid</attribute>
            </xpath>
            <xpath expr="//header" position="after">
                <field name="need_validation" invisible="1" />
                <field name="approved" invisible="1" />
                <field name="rejected" invisible="1" />
                <div
                    role="alert"
                    class="alert alert-warning"
                    attrs="{'invisible': ['|', '|', '|',
                     ('approved', '=', True), ('state', 'not in', ['confirm']),
                     ('rejected', '=', True), ('approval_ids', '=', [])]}"
                    style="margin-bottom:0px;"
                >
                    <p><i class="fa fa-info-circle" />This Record needs to be
                        approved.
                        <button
                            name="action_approve_approval"
                            string="Approve"
                            attrs="{'invisible': [('approval_ids', '=', [])]}"
                            type="object"
                            class="oe_inline oe_button btn-success"
                            icon="fa-check"
                        />
                        <button
                            name="action_reject_approval"
                            string="Reject"
                            type="object"
                            class="btn-icon btn-danger"
                            icon="fa-stop"
                        />
                    </p>
                </div>
                <div
                    role="alert"
                    class="alert alert-success"
                    attrs="{'invisible': ['|', '|', ('approved', '!=', True), ('state', 'not in', ['confirm']), ('approval_ids', '=', [])]}"
                    style="margin-bottom:0px;"
                >
                    <p><i class="fa fa-thumbs-up" /> Operation has been <b
                        >approved</b>!</p>
                </div>
                <div
                    role="alert"
                    class="alert alert-danger"
                    attrs="{'invisible': ['|', '|', ('rejected', '!=', True), ('state', 'not in', ['confirm']), ('approval_ids', '=', [])]}"
                    style="margin-bottom:0px;"
                >
                    <p><i class="fa fa-thumbs-down" /> Operation has been <b
                        >rejected</b>.</p>
                </div>
            </xpath>
            <xpath expr="//button[@name='action_invoice_open']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='action_invoice_open']" position="before">
                <button
                    name="action_confirm"
                    type="object"
                    string="Confirm"
                    class="oe_highlight"
                    states="draft"
                />
            </xpath>
            <xpath expr="//button[@name='action_invoice_cancel']" position="attributes">
                <attribute name="states">draft,confirm,open</attribute>
            </xpath>
            <xpath expr="//button[@name='action_invoice_draft']" position="attributes">
                <attribute name="states" />
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='action_invoice_draft']" position="after">
              <button
                    name="action_restart"
                    type="object"
                    string="Restart"
                    states="cancel,reject"
                />
            </xpath>

            <xpath expr="//notebook" position="inside">
                <page string="Approvals" name="tier_validation">
                    <group>
                        <field name="approval_template_id" />
                        <field
                            name="active_approver_partner_ids"
                            widget="many2many_tags"
                        />
                    </group>
                    <field
                        name="approval_ids"
                        attrs="{'invisible':[('approval_ids', '=', [])]}"
                        nolabel="1"
                    />
                </page>
            </xpath>
        </field>
    </record>

