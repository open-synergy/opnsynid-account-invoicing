<odoo>

<record id="account_asset_reverse_view_form" model="ir.ui.view">
    <field name="name">account_asset_reverse form</field>
    <field name="model">account_asset_reverse</field>
    <field name="arch" type="xml">
        <form>
            <group>
                <group>
                    <field name="date" />
                    <field name="journal_id" />
                </group>
                <group>
                    <field name="move_prefix" />
                    <field name="line_prefix" />
                    <field name="reconcile" />
                </group>
            </group>

            <footer>
                <button
                        name="action_reverse"
                        string="Reverse Entries"
                        type="object"
                        class="oe_highlight"
                    />
                or
                <button string="Cancel" class="oe_link" special="cancel" />
            </footer>
        </form>
    </field>
</record>

<record id="account_asset_reverse_action" model="ir.actions.act_window">
    <field name="name">Reverse Deferred Revenue</field>
    <field name="res_model">account_asset_reverse</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="account_asset_reverse_view_form" />
    <field name="target">new</field>
    <field name="binding_model_id" ref="account_asset.model_account_asset_asset" />
</record>

</odoo>
